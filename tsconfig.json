{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "removeComments": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "pretty": true,
      "listFiles": true
   },
   "filesGlob": [
      "./src/**/*.ts",
      "!./jspm_packages/**/*.ts",
      "!./node_modules/**/*.ts",
      "./typings/**/*.ts"
   ],
   "compileOnSave": false,
   "files": [
      "./src/app/app.component.ts",
      "./src/app/app.main.ts",
      "./typings/main.d.ts",
      "./typings/main/ambient/es6-collections/index.d.ts",
      "./typings/main/ambient/es6-promise/index.d.ts",
      "./typings/main/ambient/zone.js/index.d.ts"
   ],
   "exclude": [
      "./typings/browser/",
      "./typings/browser.d.ts"
   ],
   "atom": {
      "rewriteTsconfig": true
   }
}
