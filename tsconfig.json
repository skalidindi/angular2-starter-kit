{
   "compilerOptions": {
      "target": "es6",
      "module": "system",
      "moduleResolution": "node",
      "outFile": "dist/app.js",
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "removeComments": true,
      "sourceMap": false,
      "experimentalDecorators": true,
      "noEmitOnError": true,
      "noImplicitAny": false
   },
   "compileOnSave": false,
   "files": [
      "./src/app/app.main.ts",
      "./typings/main.d.ts"
   ],
   "atom": {
      "rewriteTsconfig": true
   }
}
